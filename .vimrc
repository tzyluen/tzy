set hlsearch
set smartindent
set nu
set background=dark
set foldmethod=syntax
set ruler
syntax on
filetype on
set clipboard^=unnamed
set title
set fileformats=unix
set showmode
set showcmd
set showmatch
set ignorecase
set smartcase
set backup
set backupdir=$HOME/.vim/backup
set directory=$HOME/.vim/tmp


set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
